{
  "name": "mtb",
  "version": "0.2.0",
  "description": "The Mountain Bike of Static Site Generators - simple, lightweight, fast, reliable, and built for all terrain",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "bin": {
    "mtb": "bin/mtb"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DiegoVallejoDev/mtb.git"
  },
  "keywords": [
    "static-site-generator",
    "html",
    "template",
    "components",
    "alpine",
    "alpinejs",
    "build-tool",
    "ssg"
  ],
  "author": "Diego Vallejo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DiegoVallejoDev/mtb/issues"
  },
  "homepage": "https://github.com/DiegoVallejoDev/mtb#readme",
  "dependencies": {
    "commander": "^11.0.0",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "jest": "^29.5.0"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "index.js",
    "bin/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "index.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  }
}
